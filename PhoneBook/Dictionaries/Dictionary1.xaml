<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:local="clr-namespace:PhoneBook.Dictionaries">
    <Style x:Key="baseFont">
        <Setter Property="Control.FontFamily" Value="Trebuchet MS"></Setter>
        <Setter Property="Control.FontSize" Value="16"></Setter>
    </Style>
    <Style TargetType="GroupBox" BasedOn="{StaticResource baseFont}">
        <Setter Property="Width" Value="400" />
        <Setter Property="Padding" Value="15" />
        <Setter Property="Margin" Value="5" />
    </Style>
</ResourceDictionary>